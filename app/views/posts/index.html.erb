<div id= "header">
    <div id="leftElement">
        <img src="https://assets.stickpng.com/images/580b57fcd9996e24bc43c53e.png" />
        <h2> MY TWITTER </h2>
    </div>
    <%= link_to "Publish new post", new_post_path, class: "mButton" %>
</div>

<div id="app">

    <% @posts.each do |post|%>

        <div class="tweetComponent">

            <div class="leftElement">

                <div class="avatar">
                </div>
                <div class="content">
                    <h5>Imdad Adelabou</h5>
                    <p><%= post.content %></p>
                </div>

            </div>
            <div class="allButton">

                <%= link_to 'View more', post_path(post.id), class: 'aButton' %>
                <%= link_to 'Edit', edit_post_path(post.id), class: 'aButton'%>
                <%= link_to 'Delete', post_path(post.id), class: 'aButton', method: :delete%>

            </div>
        <div>

        </div>

        </div>

    <% end %>

</div>
