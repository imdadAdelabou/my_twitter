<%= form_with(model: @post, local: true, url: choose_new_or_edit) do |form| %>
    <% if @post.errors.any? %>
        <div class="error">
            <h2> il y a <%= @post.errors.count %> erreurs.</h2>
            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div>
        <%= form.text_area :content, class: "cTextArea" %>
    </div>
    <%= form.submit class: "cSubmit" %>
<% end %>